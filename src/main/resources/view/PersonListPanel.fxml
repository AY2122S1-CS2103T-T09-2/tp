<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <HBox />
  <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
    <items>
      <VBox>
        <children>
          <Label fx:id="contactHeader" alignment="CENTER_RIGHT" text="Contacts" textAlignment="CENTER">
            <VBox.margin>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
          </Label>
          <ListView fx:id="personListView" VBox.vgrow="ALWAYS" />
        </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
        <children>
          <Label fx:id="favourites" alignment="CENTER_RIGHT" text="Favourites" textAlignment="CENTER">
            <VBox.margin>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
          </Label>
          <ListView VBox.vgrow="ALWAYS" />
        </children>
      </VBox>
    </items>
  </SplitPane>
</VBox>
